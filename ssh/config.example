# Default settings for all hosts
Host *
    IdentityFile ~/.ssh/id_ed25519
    AddKeysToAgent yes
    UseKeychain yes
    User eigyn

# -------------------------------------------
# Network Infrastructure (10.0.0.0/24)
# -------------------------------------------
Host router
    HostName 10.0.0.1
    User admin
    # Main router/firewall

# -------------------------------------------
# Servers VLAN (10.0.10.0/24)
# -------------------------------------------
# Pihole 1 - Primary DNS
Host pihole1
    HostName 10.0.10.3

Host pihole1-root
    HostName 10.0.10.3
    User root

# Pihole 2 - Secondary DNS
Host pihole2
    HostName 10.0.10.4

Host pihole2-root
    HostName 10.0.10.4
    User root

# Proxmox hypervisor (bare metal)
Host hypervisor
    HostName 10.0.10.5

Host hypervisor-root
    HostName 10.0.10.5
    User root

# Docker/Portainer host
Host docker
    HostName 10.0.10.6

Host docker-root
    HostName 10.0.10.6
    User root

# Home Assistant (VM)
Host homeassistant
    HostName 10.0.10.7

Host homeassistant-root
    HostName 10.0.10.7
    User root

# Ubuntu compute workloads (VM)
Host compute
    HostName 10.0.10.8

Host compute-root
    HostName 10.0.10.8
    User root

# -------------------------------------------
# Storage VLAN (10.0.20.0/24)
# -------------------------------------------
Host nas
    HostName 10.0.20.2
    # NAS device

# -------------------------------------------
# Trusted VLAN (10.0.40.0/24)
# -------------------------------------------
Host workstation
    HostName 10.0.40.3
    # Primary workstation

Host laptop
    HostName 10.0.40.5
    # Mobile workstation
